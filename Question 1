
int led=13;
int botao=11;
int estadodobotao=0;
  
	void setup(){
  		pinMode(led, OUTPUT);
  		pinMode(botao, INPUT);
      	
 
}

	void loop(){
   		estadodobotao=digitalRead(botao);
      
      if(estadodobotao == HIGH){
        digitalWrite (led, HIGH);
        
        delay (10000);
        
    	}
      
      else{ digitalWrite (led, LOW);
           
        }      

}
